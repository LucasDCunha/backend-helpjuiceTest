<div class="container">
  <%= form_with url: searches_path, method: :post, local: true do |f| %>
    <%= f.text_field :text, placeholder: "Type a search term...", autofocus: true %>
    <%= f.submit "Search" %>
  <% end %>

  <h2>Popular Searches</h2>
  <ul>
    <% @popular_searches.each do |query, count| %>
